<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<Shell>
		<App>
			<pages>
				<Page title="{i18n>pageTitle}">
					<content>
						<Panel headerText="{i18n>panelTitle}">
							<content>
								<VBox class="sapUiSmallMargin">
									<Text text="{/name}"/>
									<Input value="{/name}" valueLiveUpdate="true" width="30%"/>
								</VBox>
							</content>
						</Panel>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>